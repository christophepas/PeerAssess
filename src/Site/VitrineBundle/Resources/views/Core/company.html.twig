{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
	$( document ).ready(function() {
		$animateIn = $(".animate");
		var animateInOffset = 100;
		$(window).scroll(function(e) {
			var windowHeight = $(window).height(),
			windowScrollPosition = $(window).scrollTop(),
			bottomScrollPosition = windowHeight + windowScrollPosition;
			$animateIn.each(function(i, element) {
				if ($(element).offset().top + animateInOffset < bottomScrollPosition) {
					$(element).removeClass('pre-animate-left pre-animate-right pre-animate-up');
				}
			});
		});
	});
</script>
<script type="text/javascript">
  //hide bg if form is shown


  //variable globale d√©terminant si une des box de connexion/inscription/reset est apparente. (utile pour l'affichage ou non du background)
  var toogleForm=false;

  function toogleBg() {
      if ($(window).width() < 992 && toogleForm == true ) {
         $('.background').css("background","none");
         $(".fadeElt").toogleClass("pull-left");
      }
      else{
         $('.background').css("background","");
      }
  }
  $(window).on('resize',toogleBg);

  </script>
